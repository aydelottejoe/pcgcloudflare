---
import ContactLayout from '../layouts/Contact.astro';

const title = "Message Sent | PCG";
const description = "Thank you for contacting Pleasanton Commercial Group.";
---

<ContactLayout title={title} description={description}>
  <div style="text-align: center; padding: 4rem 1rem; max-width: 600px; margin: 0 auto;">
    <h1 style="color: #1a3c6e; margin-bottom: 1rem;">Message Received</h1>
    <p style="font-size: 1.2rem; color: #555; line-height: 1.6;">
      Thank you for reaching out. We have received your inquiry and will review it with strict confidentiality. 
      One of our associates will be in touch shortly.
    </p>
    <a href="/" style="display: inline-block; margin-top: 2rem; padding: 0.75rem 1.5rem; background: #1a3c6e; color: white; text-decoration: none; border-radius: 4px; font-weight: bold;">
      Return to Home
    </a>
  </div>
</ContactLayout>