---
import ContactLayout from '../layouts/Contact.astro';

const title = "Contact PCG";
const description = "Get in touch with PCG for confidential automotive business sales and valuations.";
---

<center></center>
<ContactLayout title={title} description={description}>
  <div class="contact-wrapper">
    
    <section class="contact-info">
      <h1>Get in Touch</h1>
      <p class="intro-text">
        Ready to discuss your automotive business exit or looking for the right acquisition? 
        We prioritize <strong>strict confidentiality</strong> in all our communications.
      </p>

      <div class="info-item">
        <h3>üìû Phone</h3>
        <p><a href="tel:+15124264579">(512) 426-4579</a></p>
      </div>

      <div class="info-item">
        <h3>‚úâÔ∏è Email</h3>
        <p><a href="mailto:info@pleasantoncg.com">info@pleasantoncg.com</a></p>
      </div>
      
      <div class="confidentiality-note">
        <small><em>* All inquiries are treated with the highest level of discretion. We do not disclose your information to third parties without consent.</em></small>
      </div>
    </section>

    <section class="form-container">
      <form class="contact-form" method="POST" action="https://formspree.io/f/mkogedlb">
        
        <input type="hidden" name="_next" value="/success" />

        <input type="text" name="_gotcha" style="display:none" />

        <div class="form-group">
          <label for="name">Full Name</label>
          <input type="text" id="name" name="name" required placeholder="John Doe" />
        </div>

        <div class="form-group">
          <label for="email">Email Address</label>
          <input type="email" id="email" name="email" required placeholder="john@example.com" />
        </div>

        <div class="form-group">
          <label for="phone">Phone Number</label>
          <input type="tel" id="phone" name="phone" placeholder="(555) 123-4567" />
        </div>

        <div class="form-group">
          <label for="interest">I am interested in:</label>
          <select id="interest" name="interest">
            <option value="selling">Selling my Automotive Business</option>
            <option value="buying">Buying an Automotive Business</option>
            <option value="valuation">Business Valuation</option>
            <option value="other">Other Inquiry</option>
          </select>
        </div>

        <div class="form-group">
          <label for="message">Message</label>
          <textarea id="message" name="message" rows="5" required placeholder="How can we help you?"></textarea>
        </div>

        <button type="submit" class="submit-btn">Send Confidential Message</button>
      </form>
    </section>

  </div>
</ContactLayout>

<style>
  /* Wrapper for the split layout */
  .contact-wrapper {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    max-width: 1100px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  /* Responsive: Two columns on desktop */
  @media (min-width: 768px) {
    .contact-wrapper {
      grid-template-columns: 1fr 1.5fr; /* Info takes less space than form */
      padding: 4rem 1rem;
    }
  }

  /* Typography & Colors */
  h1 {
    color: #1a3c6e; /* PCG Dark Blue */
    margin-bottom: 1rem;
  }

  h3 {
    margin-bottom: 0.5rem;
    color: #333;
    font-size: 1.1rem;
  }

  .intro-text {
    margin-bottom: 2rem;
    line-height: 1.6;
    color: #555;
  }

  .info-item {
    margin-bottom: 1.5rem;
  }

  .info-item a {
    color: #1a3c6e;
    text-decoration: none;
    font-weight: bold;
  }
   
  .info-item a:hover {
    text-decoration: underline;
  }

  .confidentiality-note {
    margin-top: 2rem;
    color: #777;
    border-top: 1px solid #eee;
    padding-top: 1rem;
  }

  /* Form Styling */
  .form-container {
    background: #f9f9f9;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0,0,0,0.05);
  }

  .form-group {
    margin-bottom: 1.25rem;
  }

  label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: #333;
  }

  input, select, textarea {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #ccc;
    border-radius: 4px;
    font-family: inherit;
    font-size: 1rem;
  }

  input:focus, select:focus, textarea:focus {
    outline: none;
    border-color: #1a3c6e;
    box-shadow: 0 0 0 3px rgba(26, 60, 110, 0.1);
  }

  /* Button Styling */
  .submit-btn {
    width: 100%;
    padding: 1rem;
    background-color: #1a3c6e; /* PCG Dark Blue */
    color: white;
    border: none;
    border-radius: 4px;
    font-size: 1.1rem;
    font-weight: bold;
    cursor: pointer;
    transition: background-color 0.2s;
  }

  .submit-btn:hover {
    background-color: #142d53;
  }
</style>