---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<div class = "favicon_logo_header">
			<img src="/favicon.svg" alt="PCG" style="width: clamp(60px, 5%, 120px);">
		</div>
		
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink> 
			<HeaderLink href="/contact">Contact</HeaderLink> 
		</div>
		<div class="social-links">
			<a href="https://www.linkedin.com/company/pleasanton-commercial-group/" target="_blank">
				<span class="sr-only">Follow PCG on LinkedIn</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32" astro-icon="social/linkedin">
